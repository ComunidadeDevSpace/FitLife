<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical"
    tools:context=".ResultadoIMC">

    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Seu IMC Ã©:"
        android:textAlignment="center"
        android:textColor="@color/blue_03"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAlignment="center"
        android:textColor="@color/blue_01"
        android:textSize="38sp"
        tools:text="27,104" />

    <TextView
        android:id="@+id/textview_classificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:textColor="@color/blue_01"
        android:textSize="18sp"
        tools:text="Classification: Normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Observe a Tabela Abaixo"
        android:textColor="@color/blue_01" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="18,5 ou menos: Abaixo Do Peso"
        android:textColor="@color/blue_02" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Entre 18,5 E 24,9: Normal"
        android:textColor="@color/blue_02" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Entre 25,0 E 29,9: Sobrepeso"
        android:textColor="@color/blue_02" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Entre 30,0 E 34,9: Obesidade Grau I"
        android:textColor="@color/blue_02" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Entre 35,0 e 39,9: Obesidade Grau II"
        android:textColor="@color/blue_02" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Acima de 40: Obesidade Grau III"
        android:textColor="@color/blue_02" />
</LinearLayout>