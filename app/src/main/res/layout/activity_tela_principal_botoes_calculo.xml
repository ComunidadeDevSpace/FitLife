<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical"
    tools:context=".TelaPrincipalBotoesCalculo">

    <include layout="@layout/toolbar_tela_principal" />

    <TextView
        android:id="@+id/tv_nome_user"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Olá Nome usuário"
        android:textAlignment="textStart"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_txt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Escolha uma das opções abaixo:"
        android:textAlignment="textStart"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnIMC"
        style="@style/ButtonPrimary"
        android:layout_width="260dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/save_button_layout"
        android:backgroundTint="@color/blue_02"
        android:drawableLeft="@drawable/balanca"
        android:fontFamily="@font/poppins_bold"
        android:text="IMC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_calories"
        style="@style/ButtonPrimary"
        android:layout_width="260dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/save_button_layout"
        android:backgroundTint="@color/blue_02"
        android:drawableLeft="@drawable/firecalorias"
        android:fontFamily="@font/poppins_bold"
        android:text="Calorias"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/waterIngestion"
        style="@style/ButtonPrimary"
        android:layout_width="260dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:background="@drawable/save_button_layout"
        android:backgroundTint="@color/blue_02"
        android:drawableLeft="@drawable/baseline_water_drop_24"
        android:fontFamily="@font/poppins_bold"
        android:text="Ingestão de Água"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</RelativeLayout>