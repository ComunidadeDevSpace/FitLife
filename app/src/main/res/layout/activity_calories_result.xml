<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical"
    tools:context=".CaloriesResult">

    <include layout="@layout/toolbar_tela_principal" />

    <TextView
        android:id="@+id/tv_nome_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Fulano"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_tela_principal" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/poppins_medium"
        android:text="A quantidade de calorias diária que você deve consumir é: "
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_nome_user" />

    <TextView
        android:id="@+id/tv_objetivo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Objetivo"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36dp"
        app:layout_constraintTop_toBottomOf="@id/tv_msg" />


    <TextView
        android:id="@+id/textview_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="48sp"
        tools:hint="27,104"
        android:layout_marginLeft="100dp"
        android:maxLength="6"
        android:background="@drawable/radio_group_text"
        android:fontFamily="@font/poppins_medium"
        app:layout_constraintTop_toBottomOf="@id/tv_objetivo"
        />

    <TextView
        android:id="@+id/kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Kcal"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:layout_marginLeft="300dp"
        tools:layout_editor_absoluteX="304dp" />


</LinearLayout>