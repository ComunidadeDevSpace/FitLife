<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar_tela_principal" />

    <TextView
        android:id="@+id/tv_nome_user_imc"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_medium"
        android:hint="Fulano"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:text="seu Índice de Massa Corporea é:"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textview_resultado"
        android:layout_width="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/radio_group_text"
        android:fontFamily="@font/poppins_medium"
        android:maxLength="6"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="48sp"
        tools:hint="27,104" />

    <TextView
        android:id="@+id/textview_classificacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        tools:hint="Sobrepeso" />

    />

</LinearLayout>