<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitLife" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue_01</item>
        <item name="colorPrimaryVariant">@color/blue_02</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/blue_04</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/blue_background</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:actionOverflowButtonStyle">@style/OverflowIconStyle</item>

        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue_02</item>
<!--        <item name="android:background">@drawable/btn_rounded_corner</item>-->
    </style>

    <!-- SplashScreen Layout Styles -->
    <style name="splash_screen" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/white</item> <item name="android:textSize">36sp</item>
    </style>


    <!-- SignUp Layout Styles -->
    <style name="signup_title" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="signup_desc" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_42</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="signup_check" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_42</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="signup_kg_cm" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="TimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#262473</item>
    </style>

</resources>